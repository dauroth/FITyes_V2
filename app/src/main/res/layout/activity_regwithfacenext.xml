<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_activity"
    tools:context=".Activitys.RegWithFaceNext">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eszközök"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ebben a részben adhatja meg, hogy milyen eszközök állnak az Ön rendelkezésére az edzéshez"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="italic" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:textColor="@android:color/white"
        android:text="Mentés"
        android:textSize="17sp"
        android:padding="12dp"
        android:id="@+id/eq_reg_fb"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:onClick="eq_reg_fb" />

    <CheckBox
        android:text="Dumbbell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/dumbbell"
        android:textSize="24sp"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/clubbell"
        android:textAlignment="center" />

    <CheckBox
        android:text="Kettlebell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kettlebell"
        android:textSize="24sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/barbell"
        android:layout_alignLeft="@+id/barbell"
        android:textAlignment="center" />

    <CheckBox
        android:text="TRX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trx"
        android:textSize="24sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/sandbag"
        android:layout_alignLeft="@+id/sandbag"
        android:textAlignment="center" />

    <CheckBox
        android:text="Sandbag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sandbag"
        android:textSize="24sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/clubbell"
        android:layout_alignLeft="@+id/clubbell"
        android:textAlignment="center" />

    <CheckBox
        android:text="Clubbell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clubbell"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/kettlebell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:text="Barbell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/barbell"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/dumbbell"
        android:layout_alignLeft="@+id/dumbbell" />

</RelativeLayout>
